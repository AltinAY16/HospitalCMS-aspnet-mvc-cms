@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container-fluid mt-5 ms-1">
   


    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (Department department in Model)
            {
                <tr>
                    <td>@department.Id</td>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Departments" asp-action="Edit" asp-route-id="">Edit</a> |
                        <a class="btn btn-warning" asp-controller="Departments" asp-action="Detail" asp-route-id="">Details</a> |
                        <a class="btn btn-danger" asp-controller="Departments" asp-action="Delete" asp-route-id="">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


