@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container-fluid">
    <h1 class="mt-4">Departments List</h1>
    

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="">Edit</a> |
                        <a class="btn btn-warning" asp-action="Detail" asp-route-id="">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
