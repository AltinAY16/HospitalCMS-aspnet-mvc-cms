@model IEnumerable<Role>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <h1 class="mt-4 ">Departments List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Roles" asp-action="Create">Create New Department</a>
    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">

            <p class="fw-bold text-bg-dark"><i> You can see all roles in this area...</i> </p>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>RoleName</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.RoleName</td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
