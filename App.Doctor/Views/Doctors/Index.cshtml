@model IEnumerable<Doctors>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container-fluid">
    <h1 class="mt-4">Doctors List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Doctors" asp-action="Create">Create New Doctor</a>

    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">
            <p class="fw-bold text-bg-dark"><i>You can see all Doctors in this area...</i></p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>FullName</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>Specialty</th>
                        <th>Phone</th>
                        <th>Patients</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.Id</td>
                            <td>@doctor.FullName</td>
                            <td>@doctor.Email</td>
                            <td>@doctor.City</td>
                            <td>@doctor.Specialty</td>
                            <td>@doctor.Phone</td>
                            <td>
                                @if (doctor.Patients != null && doctor.Patients.Count > 0)
                                {
                                    <button type="button" class="btn btn-outline-secondary ms-auto" data-bs-toggle="modal" data-bs-target="#patientsModal_@doctor.Id">
                                        Show Patients
                                    </button>
                                }
                                else
                                {
                                    <span>No Patients</span>
                                }
                                <!-- Modal for Patients -->
                                <div class="modal fade" id="patientsModal_@doctor.Id" tabindex="-1" role="dialog" aria-labelledby="patientsModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="patientsModalLabel">Patients for @doctor.Email</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                @if (doctor.Patients != null && doctor.Patients.Count > 0)
                                                {
                                                    foreach (var patient in doctor.Patients)
                                                    {
                                                        <div>@patient.FullName</div>
                                                    }
                                                }
                                                else
                                                {
                                                    <div>No Patients found for this doctor.</div>
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <!-- Button trigger modal for Edit -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editDoctorModal_@doctor.Id">
                                    Edit
                                </button>
                                <!-- Button trigger modal for Delete -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal_@doctor.Id">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modals for each doctor -->
@foreach (var doctor in Model)
{
    <!-- Modal for Edit -->
    <div class="modal fade" id="editDoctorModal_@doctor.Id" tabindex="-1" role="dialog" aria-labelledby="editDoctorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editDoctorModalLabel">Edit Doctor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="Edit" asp-route-id="@doctor.Id" method="post">
                        @Html.AntiForgeryToken()
                        <!-- Add input fields for editing properties (FullName, Email, City, Specialty, Phone) -->
                        <div class="form-group">
                            <label for="FullName_@doctor.Id">Full Name</label>
                            <input type="text" class="form-control" id="FullName_@doctor.Id" name="FullName" value="@doctor.FullName" />
                        </div>
                        <div class="form-group">
                            <label for="Email_@doctor.Id">Email</label>
                            <input type="email" class="form-control" id="Email_@doctor.Id" name="Email" value="@doctor.Email" />
                        </div>
                        <div class="form-group">
                            <label for="City_@doctor.Id">City</label>
                            <input type="text" class="form-control" id="City_@doctor.Id" name="City" value="@doctor.City" />
                        </div>
                        <div class="form-group">
                            <label for="Specialty_@doctor.Id">Specialty</label>
                            <input type="text" class="form-control" id="Specialty_@doctor.Id" name="Specialty" value="@doctor.Specialty" />
                        </div>
                        <div class="form-group">
                            <label for="Phone_@doctor.Id">Phone</label>
                            <input type="text" class="form-control" id="Phone_@doctor.Id" name="Phone" value="@doctor.Phone" />
                        </div>
                        <div class="form-group">
                            <label for="Password_@doctor.Id">Password</label>
                            <input type="text" class="form-control" id="Password_@doctor.Id" name="Password" value="@doctor.Phone" />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Delete -->
    <div class="modal fade" id="deleteConfirmationModal_@doctor.Id" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this doctor?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Remove" asp-route-id="@doctor.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
