@model IEnumerable<Doctors>

@{
    ViewData["Title"] = "Doctors";
}


<div class="container-fluid">
    <h1 class="mt-4 ">Department Posts List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Doctors" asp-action="Create">Create New Doctor</a>
    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">

            <p class="fw-bold text-bg-dark"><i> You can see all Doctors in this area...</i> </p>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Role</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>Phone</th>
                        <th>Patients</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.Id</td>
                            <td>@doctor.RoleId</td>
                            <td>@doctor.Email</td>
                            <td>@doctor.City</td>
                            <td>@doctor.Phone</td>
                            <td>
                                @if (doctor.Patients.Count > 0)
                                {
                                    <a class="btn btn-outline-success ms-auto" href="#" data-bs-toggle="modal" data-bs-target="#patientsModal_@doctor.Id">Show Patients</a>
                                }
                                else
                                {
                                    <span>No Patients</span>
                                }
                                <!-- Modal -->
                                <div class="modal fade" id="patientsModal_@doctor.Id" tabindex="-1" role="dialog" aria-labelledby="patientsModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="patientsModalLabel">Patients for @doctor.Email</h5>
                                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                @foreach (var patient in doctor.Patients)
                                                {
                                                    <div>@patient.FullName</div>
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@doctor.Id">Edit</a> |
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@doctor.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


