@model IEnumerable<PostComment>

@{
    ViewData["Title"] = "PostComments";
}


<div class="container-fluid">
    <h1 class="mt-4 ">Post Comments List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="PostComments" asp-action="Create">Create New Department</a>
    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">

            <p class="fw-bold text-bg-dark"><i> You can see all post comments in this area...</i> </p>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>PostId</th>
                        @*<th>Post.Title</th>*@
                        <th>UserId</th>
                        <th>IsActive</th>
                        <th>Comment</th>                        
                        <th>
                            @Html.DisplayNameFor(PostComment => PostComment.IsActive)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var postComment in Model)
                    {
                        <tr>
                            <td>@postComment.Id</td>
                            <td>@postComment.PostId</td>
                            @*<td>@postComment.Post.Title</td>*@
                            <td>@postComment.UserId</td>
                            <td>@postComment.IsActive</td>
                            <td>@postComment.Comment</td>
                            <td>
                                @Html.DisplayFor(PostComment => postComment.IsActive)
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@postComment.Id">Edit</a> |
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal_@postComment.Id">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@foreach (var doctor in Model)
{
    <!-- Modal for Delete -->
    <div class="modal fade" id="deleteConfirmationModal_@doctor.Id" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Department Posts?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Remove" asp-route-id="@doctor.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}