@model IEnumerable<PostComment>

@{
    ViewData["Title"] = "PostComments";
}



<div class="container-fluid">
    <h1 class="mt-4 ">Patients List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Patients" asp-action="Create">Create New Department Post</a>
    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">
            <p class="fw-bold text-bg-dark"><i> You can see all Doctors in this area...</i> </p>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Post.Title</th>
                            <th>User Name</th>
                            <th>Comment</th>
                            <th>@Html.DisplayNameFor(PostComment => PostComment.IsActive)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Post.Title</th>
                            <th>User Name</th>
                            <th>Comment</th>
                            <th>@Html.DisplayNameFor(PostComment => PostComment.IsActive)</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var postComment in Model)
                        {
                            <tr>
                                <td>@postComment.Id</td>
                                <td>@postComment.Post?.Title</td>
                                <td>@postComment.User?.FullName</td>
                                <td>
                                    @if (postComment.Comment.Length > 100)
                                    {
                                        <span>@postComment.Comment.Substring(0, 100)...</span>
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#descriptionModal_@postComment.Id">Read More</a>
                                        <div class="modal fade" id="descriptionModal_@postComment.Id" tabindex="-1" role="dialog" aria-labelledby="descriptionModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="descriptionModalLabel">@postComment.User?.FullName</h5>
                                                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @postComment.Comment
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        @postComment.Comment
                                    }
                                </td>

                                <td>
                                    @Html.DisplayFor(PostComment => postComment.IsActive)
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@postComment.Id">Edit</a> |
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal_@postComment.Id">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>


@foreach (var postComment in Model)
{
    <!-- Modal for Delete -->
    <div class="modal fade" id="deleteConfirmationModal_@postComment.Id" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Post Comment?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Remove" asp-route-id="@postComment.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}