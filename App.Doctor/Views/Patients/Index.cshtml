@model IEnumerable<Patient>

@{
    ViewData["Title"] = "Patient";
}



<div class="container-fluid">
    <h1 class="mt-4">Patients List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Patients" asp-action="Create">Create New Patient</a>

    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">
            <p class="fw-bold text-bg-dark"><i>You can see all Doctors in this area...</i></p>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Patient DataTable
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Role</th>
                        <th>FullName</th>
                        <th>Image</th>
                        <th>Email</th>
                        <th>Diagnosis</th>
                        <th>City</th>
                        <th>Phone</th>
                        <th>Doctor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td>@patient.Id</td>
                            <td>
                                @patient.Role?.RoleName
                            </td>
                            <td>@patient.FullName</td>
                            <td>@patient.Image</td>
                            <td>@patient.Email</td>
                            <td>@patient.Diagnosis</td>
                            <td>@patient.City</td>
                            <td>@patient.Phone</td>
                            <td>@patient.Doctor?.FullName</td>

                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@patient.Id">Edit</a> |
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal_@patient.Id">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@foreach (var patient in Model)
{
    <!-- Modal for Delete -->
    <div class="modal fade" id="deleteConfirmationModal_@patient.Id" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Patient?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Remove" asp-route-id="@patient.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
