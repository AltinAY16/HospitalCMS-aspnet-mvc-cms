@model IEnumerable<Setting>

@{
    ViewData["Title"] = "Settings";
}


<div class="container-fluid">
    <h1 class="mt-4 ">Departments List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Settings" asp-action="Create">Create New Setting</a>
    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">

            <p class="fw-bold text-bg-dark"><i>Settings</i> </p>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Value</th>
                        <th>User</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var setting in Model)
                    {
                        <tr>
                            <td>@setting.Id</td>
                            <td>@setting.Name</td>
                            <td>@setting.Value</td>
                            <td>@setting.User.FullName</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Settings" asp-action="Edit" asp-route-id="@setting.Id">Edit</a> |
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal_@setting.Id">
                                    Delete
                                </button>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

