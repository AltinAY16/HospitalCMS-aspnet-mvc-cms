<!-- portfolio -->
<section class="section doctors">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h2>Doctors</h2>
                    <div class="divider mx-auto my-4"></div>
                    <p>We provide a wide range of creative services adipisicing elit. Autem maxime rem modi eaque, voluptate. Beatae officiis neque </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-flex flex-wrap text-center justify-content-center">
                @foreach (Doctors item in Model)
                {

                    <div class="card border border-1 border-radius-2 border-dark m-3 shadow" style="width: 18rem;">
                        <a asp-controller="Doctor" asp-action="Detail" asp-route-id="@item.Id" target="_blank">
                            @if (item.Image != null)
                            {
                                <img src="@item.Image" title="@item.FullName" class="card-img-top"  alt="...">

                            }
                            else
                            {
                                <img src="/HospitalTemplate/images/team-young-specialist-doctors-standing-corridor-hospital.jpg" title="@item.FullName"  class="card-img-top" alt="...">
                            }
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@item.FullName</h5>
                            <p class="card-text">@item.Specialty</p>
                            <a class="btn btn-info" asp-controller="Doctor" asp-action="Detail" asp-route-id="@item.Id" target="_blank"> Go See Doctor </a>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</section>
