@model IEnumerable<Setting>

@{
    ViewData["Title"] = "Settings";
}


<div class="container-fluid">
    <h1 class="mt-4 ">Settings List</h1>
    <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Settings" asp-action="Create">Create New Setting</a>
    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">

            <p class="fw-bold text-bg-dark"><i>Settings</i> </p>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Settings DataTable
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Setting Id</th>
                        <th>Setting Name</th>
                        <th>Site Email</th>
                        <th>Site Address</th>
                        <th>Site Phone</th>
                        <th>Site Logo</th>
                        <th>Linkedins</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var setting in Model)
                    {
                        <tr>
                            <td>@setting.Id</td>
                            <td>@setting.Name</td>
                            <td>@setting.Email</td>
                            <td>@setting.Address</td>
                            <td>@setting.Phone</td>
                            <td><img src="@setting.Image" alt="Logo" class="logo-img" /></td>
                            <td>
                                <li>
                                    <a href="@setting.AlpLinkedin" title="Alp's LinkedIn Profile"><i class="fab fa-linkedin"></i> Alparslan</a>
                                </li>
                                <li>
                                    <a href="@setting.KadirLinkedin" title="Kadir's LinkedIn Profile"><i class="fab fa-linkedin"></i> Kadir</a>
                                </li>
                                <li>
                                    <a href="@setting.UtkuLinkedin" title="Utku's LinkedIn Profile"><i class="fab fa-linkedin"></i> Utku</a>
                                </li>
                            </td>

                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@setting.Id"><i class="fas fa-edit"></i>Edit</a> |
                                <!-- Button trigger modal for Delete -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal_@setting.Id">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@foreach (var setting in Model)
{
    <!-- Modal for Delete -->
    <div class="modal fade" id="deleteConfirmationModal_@setting.Id" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this Setting?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Remove" asp-route-id="@setting.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
