@model Setting

@{
    ViewData["Title"] = "Create a Setting";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-controller="Settings" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" id="Name" name="Name" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Value" class="form-label">Value</label>
                    <textarea id="Value" name="Value" class="form-control" asp-for="Value" rows="4"></textarea>
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-controller="Settings" asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>
