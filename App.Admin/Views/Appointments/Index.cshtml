@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "Roles List";
}

<div class="container-fluid">
    <h1 class="mt-4 ">Appointment List</h1>
  @*  <a class="btn btn-outline-success mt-2 ms-1 mb-2" asp-controller="Roles" asp-action="Create">Create Role</a>*@
    <div class="card mb-4">
        <div class="card-body text-center bg-dark text-bg-dark">

            <p class="fw-bold text-bg-dark"><i> You can see all appointments in this area...</i> </p>

        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Roles DataTable
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Full Name</th>
                        <th>Department</th>
                        <th>Doctor</th>
                        <th>AppointmentDate</th>
                        <th>AppointmentTime</th>
                        <th>Message</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Id</td>
                            <td>@appointment.FullName</td>
                            <td>@appointment.Department?.Name</td>
                            <td>@appointment.Doctor?.FullName</td>
                            <td>@appointment.AppointmentDate</td>
                            <td>@appointment.AppointmentTime</td>
                            <td>@appointment.Message</td>
                            <td>@appointment.Phone</td>
                            <td>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@appointment.Id">Edit</a> |
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@appointment.Id">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
