@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mt-5">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mb-4 shadow-lg">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-user mr-1"></i>
                User Information
            </div>
            <div class="card-body">
                <p class="lead">Welcome, <strong>@Model.FullName</strong></p>
                <div class="user-info">
                    <p><i class="fas fa-envelope"></i> Email: @Model.Email</p>
                    <p><i class="fas fa-map-marker-alt"></i> City: @Model.City</p>
                    <p><i class="fas fa-phone"></i> Phone: @Model.Phone</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row my-5 p-1 bg-success">
    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Doctors</p>
                            <h5 class="font-weight-bolder mb-0">
                                @Model.DoctorCount
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fas fa-user-md"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Patients</p>
                            <h5 class="font-weight-bolder mb-0">
                                @Model.PatientCount
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fas fa-procedures"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Users</p>
                            <h5 class="font-weight-bolder mb-0">
                                @Model.UserCount
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Appointments</p>
                            <h5 class="font-weight-bolder mb-0">
                                @Model.AppointmentCount
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
